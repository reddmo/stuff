---
layout: layouts/default.liquid
---

<div class="main-sections">
  <section>
    <h1 class="posts" style="color: var(--color-text)">Latest</h1><br class="br">
    {% assign posts = collections.posts %}
    {% assign count = 1 %}
    {% include "postlist.liquid" %}
  </section>
<hr class="br">
  <section>
    <h1 class="posts" style="color: var(--color-text)">More posts</h1><br>
    {% assign posts = collections.posts %}
    {% assign count = 4 %}
    {% assign offset = 1 %}
    {% include "postlist.liquid" %}
    <br>
    <center><a class="menu" href="/articles" style="width: 100%">all the articles</a></center>
  </section>
</div>

<style>
  .main-sections {
    display: flex;
    flex-direction: column;
    gap: var(--space-7);
    margin-bottom: var(--space-3);
    
  }
  .articles-link {
    display: block;
    margin-top: var(--space-2);
    text-decoration: underline solid .1em var(--color-link);
  }
  
  .menu {
    background-color: var(--color-background);
    border: .10px solid var(--color-background);
    color: var(--color-link);
    font-size: var(--font-size-xs);
    min-width: 6ch;
    font-weight: bold;
    display: inline-block;
    margin-top: 10px;
    text-transform: none;
    box-shadow: 0px 4px 7px 0px var(--slate-10);
    padding: 0.1rem var(--space-1);
    text-align: center;
    text-decoration: none;
  }

  .menu:hover {
    color: var(--color-text) !important;
    border: .10px solid var(--color-primary);
  } 
</style>
